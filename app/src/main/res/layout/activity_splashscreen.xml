<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashScreenActivity"
    android:background="#FC5C65">

   <TextView
       android:id="@+id/splash_ayoMakan_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ayo Makan"
       android:textSize="36dp"
       android:fontFamily="@font/caveat_bold"
       android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="80dp"
       />

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="340dp"
        android:layout_height="223dp"
        android:layout_below="@id/splash_ayoMakan_txt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_logo"
        android:layout_marginTop="150dp"
        />
    <TextView
        android:id="@+id/splash_quotes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laper ? Makan Lah"
        android:textSize="24dp"
        android:fontFamily="@font/caveat_medium"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_image"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>